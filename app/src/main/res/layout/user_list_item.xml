<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/userCell"
    android:transitionName="cell"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:textAlignment="viewStart"
        android:id="@+id/titleView"
        android:paddingTop="20dp"
        android:paddingLeft="60dp"
        android:layout_alignParentTop="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/imageView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:textAlignment="viewStart"
        android:id="@+id/spaceView"
        android:paddingTop="60dp"
        android:paddingLeft="60dp"
        android:layout_alignTop="@+id/titleView"
        android:layout_alignStart="@+id/titleView" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Large Text"
        android:textAlignment="viewStart"
        android:id="@+id/dateTimeView"
        android:paddingTop="95dp"
        android:paddingLeft="60dp"
        android:layout_alignTop="@+id/titleView"
        android:layout_alignStart="@+id/titleView" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:padding="10dp"
        android:layout_alignParentRight="@+id/titleView"
        android:layout_alignParentStart="true"
        android:src="@drawable/listimage"/>
    <!--1st for every new field you need another textview here-->
</RelativeLayout>